<h1>Company Managment Page - <%= @company.name %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone number</th>
    <th>Token</th>
    <th>Fb</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.phone_number %></td>
    <td><%= user.token %></td>
    <td><%= user.fb_id %></td>
    <td><%= link_to 'Show', user_path(@company.url,user) %></td>
    <td><%= link_to 'Edit', edit_user_path(@company.url,user) %></td>
    <td><%= link_to 'Destroy', user_path(@company.url,user), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>


<ul>
  <b>Company Restaurants</b>
  <% @company.restaurants.each do |rest| %>
    <li><%= rest.name %></li>
  <% end %>
</ul>
